SUI_SKWH_REGISTRY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
SUI_CERTIFICATE_KIOSK=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Zircuit Network
ZIRCUIT_RPC_URL=https://zircuit-testnet.drpc.org
ZIRCUIT_PRIVATE_KEY=YOUR_ZIRCUIT_PRIVATE_KEY
ZIRCUIT_EKWH_CONTRACT=0x1234567890abcdef1234567890abcdef12345678
ZIRCUIT_BRIDGE_CONTRACT=0x1234567890abcdef1234567890abcdef12345678
ZIRCUIT_GUD_ADAPTER_CONTRACT=0x1234567890abcdef1234567890abcdef12345678

# Celo Network
CELO_RPC_URL=https://alfajores-forno.celo-testnet.org
CELO_PRIVATE_KEY=YOUR_CELO_PRIVATE_KEY
CELO_KYC_REGISTRY=0x1234567890abcdef1234567890abcdef12345678

# === External Services ===
# Walrus Storage
WALRUS_GATEWAY_URL=https://aggregator-devnet.walrus.space
WALRUS_PUBLISHER_URL=https://publisher-devnet.walrus.space
WALRUS_EPOCHS=5

# Walrus Storage Authentication & Signing
WALRUS_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALRUS_SIGNER_ADDRESS=0x742d35cc6cf004b4d6e8b0b1c5b2e7a5f1234567

# Storage Configuration
WALRUS_MAX_FILE_SIZE=10485760          # 10MB max file size
WALRUS_UPLOAD_TIMEOUT=60000            # 60 second timeout
WALRUS_RETRY_ATTEMPTS=3                # Number of retry attempts
WALRUS_RETRY_DELAY=2000                # Delay between retries (ms)

# Mock/Development Settings
WALRUS_MOCK_MODE=false                 # Enable mock mode for testing
WALRUS_MOCK_ENDPOINT=http://localhost:8080/mock
WALRUS_DEBUG=false                     # Enable debug logging

# Seal Configuration
SEAL_CONTENT_HASH_ALGORITHM=sha256     # Hash algorithm for content
SEAL_SIGNATURE_VERSION=1               # Signature schema version
SEAL_ENABLE_VERIFICATION=true          # Enable automatic verification

# Storage Hooks Integration
STORAGE_HOOKS_ENABLED=true             # Enable storage hooks
STORAGE_AUTO_UPLOAD=true               # Auto-upload proofs to Walrus
STORAGE_AUTO_SEAL=true                 # Auto-generate seal signatures
STORAGE_BACKUP_ENABLED=true            # Enable local backup copies
STORAGE_BACKUP_PATH=./backups/proofs   # Local backup directory

# Sui NFT Integration
SUI_AUTO_UPDATE_METADATA=true          # Auto-update NFT metadata with storage info
SUI_METADATA_BATCH_SIZE=10             # Batch size for metadata updates

# Gud Trading Engine
GUD_TRADING_ENGINE_URL=https://api.gud.trading
GUD_API_KEY=your_gud_api_key_here

# imToken Deep Link
IMTOKEN_SCHEME=imtoken://
IMTOKEN_CALLBACK_URL=https://app.greenshare.energy/callback

# === Frontend Configuration ===
NEXT_PUBLIC_APP_NAME=GreenShare
NEXT_PUBLIC_APP_URL=https://app.greenshare.energy
NEXT_PUBLIC_ROFL_ENDPOINT=http://localhost:8080
NEXT_PUBLIC_SUI_NETWORK=testnet
NEXT_PUBLIC_ZIRCUIT_CHAIN_ID=48899
NEXT_PUBLIC_CELO_CHAIN_ID=44787

# === Database (Optional for caching) ===
DATABASE_URL=postgresql://username:password@localhost:5432/greenshare

# === Security ===
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# === Monitoring ===
SENTRY_DSN=<SENTRY_DSN>
LOG_LEVEL=info